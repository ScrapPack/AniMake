{
  "name": "anime-composer",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "engines": { "node": ">=18" },
  "scripts": {
    "dev:ui": "pnpm --filter @composer/desktop dev",
    "dev:api": "uv run --python 3.11 --directory services/api uvicorn app.main:app --reload --port 5175",
    "lint": "pnpm -r eslint .",
    "typecheck": "pnpm -r tsc -b"
  }
}


